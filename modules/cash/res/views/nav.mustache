<script>
require(["jquery","jquery-block","bootstrap"], function ($) {
	$(function() {
		var $page = $("body");
		$(document).on("click", "#editSettings",function(evt){
			evt.preventDefault();
			$this = $(this);
			var $me = $page;
			$me.block();
			(function (cb) {
				require(['cash/settings-modal'], function (Modal) {
					var modal = new Modal();
					modal.show();
					modal.once('shown', function () { $me.unblock(); })
					modal.once('result', function (type, acc) {
						if (type=='saved')
							location.reload();
						modal.hide()
						cb();
					})
				},cb)
			})(function (err) {
				if (err) appError(err);
				$me.unblock();
			})
			return false;
		});
	});
},appError)
</script>
